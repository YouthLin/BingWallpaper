<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/general">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoSetWallpaper"
            android:title="@string/settings_auto_set_wallpaper" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_about">
        <Preference
            android:key="aboutApp"
            android:title="@string/settings_about_app" />
        <Preference
            android:key="aboutNotice"
            android:title="@string/settings_about_notice" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_version">
        <Preference
            android:key="check"
            android:summary="@string/cur_version"
            android:title="@string/settings_update_check" />
    </PreferenceCategory>
</PreferenceScreen>